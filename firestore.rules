
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admin actions via service account (like from Vercel)
    // This rule is implicitly handled by Firebase Admin SDK, but we state it for clarity.
    // Requests with service account credentials bypass these rules.

    // Users can read/update their own profile information
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow create for new users signing up
      allow create: if request.auth != null;
    }
    
    // Work Orders, Collaborators, Vehicles, etc.
    // Only authenticated users can access app data.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
